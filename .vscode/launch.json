    "version": "0.2.0",
    "configurations": [
        {
          "name": "Django runserver",
          "type": "python",
          "purpose": ["debug-test"],
          "request": "launch",
          "program": "${workspaceFolder}/app/manage.py",
          "cwd": "${workspaceFolder}/app",
          "args": ["runserver"],
          "env": {
            "DJANGO_SETTINGS_MODULE": "app.settings.base",
          },
          "django": true,
          "justMyCode": true
        },
        {
          "name": "Django shell",
          "type": "python",
          "purpose": ["debug-test"],
          "request": "launch",
          "program": "${workspaceFolder}/app/manage.py",
          "cwd": "${workspaceFolder}/app",
          "args": ["shell"],
          "env": {
            "DJANGO_SETTINGS_MODULE": "app.settings.base",
          },
          "django": true,
          "justMyCode": true
        },
        {
          "name": "Django test",
          "type": "python",
          "purpose": ["debug-test"],
          "request": "launch",
          "program": "${workspaceFolder}/app/manage.py",
          "cwd": "${workspaceFolder}/app",
          "args": ["test"],
          "env": {
            "DJANGO_SETTINGS_MODULE": "app.settings.test",
          },
          "django": true,
          "justMyCode": true,
        },
    ]
}
